{% extends 'base.Admin.html.twig' %}

{% block title %}Encyclopedie des Personnages{% endblock %}

{% block stylesheets %}

<link rel="stylesheet" type="text/css" href="{{ asset('css/cssadmin/encyclopediedespersonnages.css') }}">

{% endblock %}

{% block body %}
    <h1>Encyclopedie des Personnages</h1>

    <a href="{{ path('admin_encyclopedie_des_personnages_new') }}" type="button" class="btn btn-success">Crée une nouvelle Encyclopédie des Personnage</a>
    <h1><a href="{{ path('admin_encyclopedie_du_personnage_index') }}" type="button" class="btn btn-info">Retour vers Encyclopédie du Personnage</a></h1>    

    <table class="table text-light">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for encyclopedie_des_personnage in encyclopedie_des_personnages %}
            <tr>
                <td>{{ encyclopedie_des_personnage.id }}</td>
                <td>{{ encyclopedie_des_personnage.title }}</td>
                <td><img src="{{ asset('img/logoencyclopediedespersonnages/' ~ encyclopedie_des_personnage.img) }}" class="img" alt=""></td>
                <td>
                    <a href="{{ path('admin_encyclopedie_des_personnages_show', {'id': encyclopedie_des_personnage.id}) }}" type="button" class="btn btn-primary">Voir</a>
                    <a href="{{ path('admin_encyclopedie_des_personnages_edit', {'id': encyclopedie_des_personnage.id}) }}" type="button" class="btn btn-warning">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4 text-light">Aucun résultat trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_encyclopedie_des_personnages_new') }}" type="button" class="btn btn-success">Crée une nouvelle Encyclopédie des Personnages</a>
{% endblock %}
