{% extends 'base.Admin.html.twig' %}

{% block title %}Fiche Personnage Lr{% endblock %}

{% block stylesheets %}

<link rel="stylesheet" type="text/css" href="{{ asset('css/cssadmin/artworkfichepersonnage.css') }}">

{% endblock %}

{% block body %}
    <h1>Fiche Personnage Lr</h1>

    <a href="{{ path('admin_fiche_personnage_lr_new') }}" class="text-light">Crée une nouvelle Fiche LR</a>
    
    <table class="table text-light">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Aptitude Leader</th>
                <th>Nom Attaque Special</th>
                <th>Description Attaque Special</th>
                <th>Nom Attaque Special Ultime</th>
                <th>Description Attaque Special Ultime</th>
                <th>Nom Passive Skill</th>
                <th>Description Passive Skill</th>
                <th>Liste Des Liens Du Personnage</th>
                <th>Liste Des Categories Du Personnage</th>
                <th>Hp De Base</th>
                <th>Attaque De Base</th>
                <th>Defense De Base</th>
                <th>Hp Max</th>
                <th>Attaque Max</th>
                <th>Defense Max</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fiche_personnage_lr in fiche_personnage_lrs %}
            <tr>
                <td>{{ fiche_personnage_lr.id }}</td>
                <td><img src="{{ asset('img/fichepersonnageartworklr/' ~ fiche_personnage_lr.img) }}" class="img" alt=""></td>
                <td>{{ fiche_personnage_lr.aptitudeleader }}</td>
                <td>{{ fiche_personnage_lr.nomattaquespecial }}</td>
                <td>{{ fiche_personnage_lr.descriptionattaquespecial }}</td>
                <td>{{ fiche_personnage_lr.nomattaquespecialultime }}</td>
                <td>{{ fiche_personnage_lr.descriptionattaquespecialultime }}</td>
                <td>{{ fiche_personnage_lr.nompassiveskill }}</td>
                <td>{{ fiche_personnage_lr.descriptionpassiveskill }}</td>
                <td>{{ fiche_personnage_lr.listedesliensdupersonnage }}</td>
                <td>{{ fiche_personnage_lr.listedescategoriesdupersonnage }}</td>
                <td>{{ fiche_personnage_lr.hpdebase }}</td>
                <td>{{ fiche_personnage_lr.attaquedebase }}</td>
                <td>{{ fiche_personnage_lr.defensedebase }}</td>
                <td>{{ fiche_personnage_lr.hpmax }}</td>
                <td>{{ fiche_personnage_lr.attaquemax }}</td>
                <td>{{ fiche_personnage_lr.defensemax }}</td>
                <td>
                    <a href="{{ path('admin_fiche_personnage_lr_show', {'id': fiche_personnage_lr.id}) }}" class="text-light">Voir</a>
                    <a href="{{ path('admin_fiche_personnage_lr_edit', {'id': fiche_personnage_lr.id}) }}" class="text-light">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="18 text-light">Aucun résultat trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_fiche_personnage_lr_new') }}" class="text-light">Crée une nouvelle Fiche LR</a>
{% endblock %}
