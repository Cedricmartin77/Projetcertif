{% extends 'base.Admin.html.twig' %}

{% block title %}Fiche Personnage Rarete Ssr{% endblock %}

{% block body %}
    <h1>Fiche Personnage Rarete Ssr index</h1>

    <a href="{{ path('admin_fiche_personnage_rarete_ssr_new') }}" class="text-light">Crée une nouvelle Fiche Personnage Rareté Ssr</a>

    <table class="table text-light">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Description Aptitude Leader</th>
                <th>Nom Super Attaque</th>
                <th>Description Super Attaque</th>
                <th>Nomp Passive Skill</th>
                <th>Description Passive Skill</th>
                <th>Liste Des Liens Du Personnage</th>
                <th>Liste Des Categories Du Personnage</th>
                <th>Hp De Base</th>
                <th>Attaque De Base</th>
                <th>Defense De Base</th>
                <th>Hp Max</th>
                <th>Attaque Max</th>
                <th>Defense Max</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fiche_personnage_rarete_ssr in fiche_personnage_rarete_ssrs %}
            <tr>
                <td>{{ fiche_personnage_rarete_ssr.id }}</td>
                <td><img src="{{ asset('img/fichepersonnageartwork/' ~ fiche_personnage_rarete_ssr.img) }}" alt=""></td>
                <td>{{ fiche_personnage_rarete_ssr.descriptionaptitudeleader }}</td>
                <td>{{ fiche_personnage_rarete_ssr.nomsuperattaque }}</td>
                <td>{{ fiche_personnage_rarete_ssr.descriptionsuperattaque }}</td>
                <td>{{ fiche_personnage_rarete_ssr.nompassiveskill }}</td>
                <td>{{ fiche_personnage_rarete_ssr.descriptionpassiveskill }}</td>
                <td>{{ fiche_personnage_rarete_ssr.listedesliensdupersonnage }}</td>
                <td>{{ fiche_personnage_rarete_ssr.listedescategoriesdupersonnage }}</td>
                <td>{{ fiche_personnage_rarete_ssr.hpdebase }}</td>
                <td>{{ fiche_personnage_rarete_ssr.attaquedebase }}</td>
                <td>{{ fiche_personnage_rarete_ssr.defensedebase }}</td>
                <td>{{ fiche_personnage_rarete_ssr.hpmax }}</td>
                <td>{{ fiche_personnage_rarete_ssr.attaquemax }}</td>
                <td>{{ fiche_personnage_rarete_ssr.defensemax }}</td>
                <td>
                    <a href="{{ path('admin_fiche_personnage_rarete_ssr_show', {'id': fiche_personnage_rarete_ssr.id}) }}" class="text-light">Voir</a>
                    <a href="{{ path('admin_fiche_personnage_rarete_ssr_edit', {'id': fiche_personnage_rarete_ssr.id}) }}" class="text-light">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16 text-light">Aucun résultat trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_fiche_personnage_rarete_ssr_new') }}" class="text-light">Crée une nouvelle Fiche Personnage Rareté Ssr</a>
{% endblock %}
