{% extends 'base.Admin.html.twig' %}


{% block title %}Nouveau Personnage{% endblock %}

{% block stylesheets %}

<link rel="stylesheet" type="text/css" href="{{ asset('css/cssadmin/artworkfichepersonnage.css') }}">

{% endblock %}


{% block body %}
    <h1>Nouveau Personnage</h1>

    <h1><a href="{{ path('admin_front_page_nouveau_perso_new') }}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Crée un nouveau Perso en Accueil</a></h1>

    <a href="{{ path('admin_fiche_personnage_ssr_index') }}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Retour vers fiche Personnage Ssr</a>

    <a href="{{ path('admin_fiche_personnage_lr_index') }}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Retour vers fiche Personnage Lr</a>

    <table class="table text-light">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image1</th>
                <th>Image2</th>
                <th>Image3</th>
                <th>Image4</th>
                <th>Image5</th>
                <th>Image6</th>
            </tr>
        </thead>
        <tbody>
        {% for front_page_nouveau_perso in front_page_nouveau_persos %}
            <tr>
                <td>{{ front_page_nouveau_perso.id }}</td>
                <td><img src="{{ asset('img/frontpagenouveaupersos/' ~ front_page_nouveau_perso.img1) }}" class="img" alt=""></td>
                <td><img src="{{ asset('img/frontpagenouveaupersos/' ~ front_page_nouveau_perso.img2) }}" class="img" alt=""></td>
                <td><img src="{{ asset('img/frontpagenouveaupersos/' ~ front_page_nouveau_perso.img3) }}" class="img" alt=""></td>
                <td><img src="{{ asset('img/frontpagenouveaupersos/' ~ front_page_nouveau_perso.img4) }}" class="img" alt=""></td>
                <td><img src="{{ asset('img/frontpagenouveaupersos/' ~ front_page_nouveau_perso.img5) }}" class="img" alt=""></td>
                <td><img src="{{ asset('img/frontpagenouveaupersos/' ~ front_page_nouveau_perso.img6) }}" class="img" alt=""></td>
                <td>
                    <a href="{{ path('admin_front_page_nouveau_perso_show', {'id': front_page_nouveau_perso.id}) }}" class="text-light">Voir</a>
                    <a href="{{ path('admin_front_page_nouveau_perso_edit', {'id': front_page_nouveau_perso.id}) }}" class="text-light">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16 text-light">Aucun résultat trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h1><a href="{{ path('admin_front_page_nouveau_perso_new') }}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Crée un nouveau Perso en Accueil</a></h1>
{% endblock %}
