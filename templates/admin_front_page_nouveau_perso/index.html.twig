{% extends 'base.Admin.html.twig' %}

{% block title %}Front Page Nouveau Perso{% endblock %}

{% block stylesheets %}

<link rel="stylesheet" type="text/css" href="{{ asset('css/cssadmin/artworkfichepersonnage.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('css/cssadminbutton/cssbutton.css') }}">

{% endblock %}

{% block body %}
    <h1>Front Page Nouveau Perso</h1>

    <h1><a href="{{ path('admin_front_page_nouveau_perso_new') }}" class="btn1">Crée un Nouveau Perso en Front Page</a></h1>

    <a href="{{ path('admin_encyclopedie_des_personnages_index') }}" class="btn2">Retour vers Encyclopédie des Personnages</a>
    <a href="{{ path('admin_encyclopedie_du_personnage_index') }}" class="btn2">Retour vers Encyclopédie du Personnage</a>


    <table class="table text-light">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for front_page_nouveau_perso in front_page_nouveau_persos %}
            <tr>
                <td>{{ front_page_nouveau_perso.id }}</td>
                <td><img src="{{ asset('img/frontpagenouveaupersos/' ~ front_page_nouveau_perso.img) }}" class="img" alt=""></td>
                <td>
                    <a href="{{ path('admin_front_page_nouveau_perso_show', {'id': front_page_nouveau_perso.id}) }}" class="btn3">Voir</a>
                    <a href="{{ path('admin_front_page_nouveau_perso_edit', {'id': front_page_nouveau_perso.id}) }}" class="btn4">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3 text-light">Aucun résultat trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h1><a href="{{ path('admin_front_page_nouveau_perso_new') }}" class="btn1">Crée un Nouveau Perso en Front Page</a></h1>
{% endblock %}
