{% extends 'base.Admin.html.twig' %}

{% block title %}L'Utilisateur{% endblock %}

{% block stylesheets %}

<link rel="stylesheet" type="text/css" href="{{ asset('css/cssadminbutton/cssbutton.css') }}">

{% endblock %}

{% block body %}
    <h1>L'Utilisateur</h1>

    <table class="table text-light">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <h1><a href="{{ path('admin_user_index') }}" class="btn2">Retour a la liste des Utilisateurs</a></h1>

    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn4">Modifier</a>

    {{ include('admin_user/_delete_form.html.twig') }}
{% endblock %}
