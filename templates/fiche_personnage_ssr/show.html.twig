            <div class="col-5">
                <p class="text1">{{ personnages.aptitudeleader }}</p>
            </div>
        </div>
        <div class="row-7">
            <div class="col-5">
                <p class="text2">Attaque Spé : {{ personnages.nomattaquespecial }}</p>
            </div>
        </div>
        <div class="row-7">
            <div class="col-5">
                <p class="text3">{{ personnages.descriptionattaquespecial }}</p>
            </div>
        </div>
        <div class="row-7">
            <div class="col-5">
                <p class="text4">Aptitude Passive : {{ personnages.nomaptitudepassive }}</p>
            </div>
