    {% for personnages in fiche_personnage_ssr %}

    <div class="container-fluid">
        <div class="row-7">
            <div class="col-5">
                <img src="{{ asset('img/fichepersonnageartwork/' ~ personnages.img) }}" class="img" alt="">
