{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block stylesheets %}

<link rel="stylesheet" type="text/css" href="{{ asset('css/cssadminbutton/cssbutton.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('css/footer.css') }}">

{% endblock %}

{% block body %}
    <h1>S'inscrire</h1>
<div class="container">
<div class="text-light">
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.pseudo) }}
        {{ form_row(registrationForm.password, {
            label: 'Mot de Passe'
        }) }}
        <a href="{{ path('app_condition_utilisation') }}" class="btn1">Condition d'utilisation</a>
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn2">S'inscrire</button>
    {{ form_end(registrationForm) }}
</div>
</div>
{% endblock %}
